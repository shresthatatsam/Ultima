<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ultima Nepal</title>
    <link href="~/Content/css/Style.css" rel="stylesheet" />
